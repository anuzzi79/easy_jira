{
    "manifest_version": 3,
    "name": "Jira Epic Graph (FacilityGrid)",
    "version": "1.0.0",
    "description": "Visualizza l'albero (force graph) di un Epico Jira (FacilityGrid) con figli e sub-task.",
    "action": {
      "default_title": "Jira Epic Graph",
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": ["storage", "tabs", "scripting"],
    "host_permissions": ["https://*.atlassian.net/*", "https://api.openai.com/*", "https://issue-checklist-prod-2.herokuapp.com/*"],
    "content_scripts": [
      {
        "matches": ["https://*.atlassian.net/*", "https://issue-checklist-prod-2.herokuapp.com/*"],
        "js": ["content-script-jira.js"],
        "run_at": "document_idle",
        "all_frames": false
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  